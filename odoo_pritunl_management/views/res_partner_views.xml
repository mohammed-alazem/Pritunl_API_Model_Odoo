<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_vpn" model="ir.ui.view">
        <field name="name">res.partner.form.vpn</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_vpn_users" type="object" class="oe_stat_button" icon="fa-shield" invisible="vpn_user_count == 0">
                    <field name="vpn_user_count" widget="statinfo" string="VPN Users"/>
                </button>
                <button name="action_create_vpn_user" type="object" class="oe_stat_button" icon="fa-plus-circle" invisible="vpn_user_count > 0">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Create VPN</span>
                    </div>
                </button>
            </xpath>
            <notebook position="inside">
                <page string="VPN Access" name="vpn_access">
                    <group>
                        <field name="has_vpn_access"/>
                        <field name="vpn_user_ids" nolabel="1"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
